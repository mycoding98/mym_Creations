<div id="wps-container">
  <!-- Slot Machine is stand-alone, never affected by email/messages -->
  <div class="wpst-slot-machine">
    <div class="wpst-title">Spin &amp; Win</div>
    <div class="wpst-slot-display">
      <div class="wpst-slot"><img id="slot-1" src="https://i.postimg.cc/x8fh0yN3/seven.png" alt="seven"></div>
      <div class="wpst-slot"><img id="slot-2" src="https://i.postimg.cc/fyzpwjSv/clover.png" alt="clover"></div>
      <div class="wpst-slot"><img id="slot-3" src="https://i.postimg.cc/BbSkqcPx/cherry.png" alt="cherry"></div>
    </div>
    <button id="spin-btn" class="wpst-spin-button" style="display: none;"><span>Spin</span></button>
    <button id="close-btn" class="wpst-close-button" onclick="closePopup()">X</button>
  </div>
  <!-- Email row is OUTSIDE the slot machine -->
  <div class="wpst-email-row" id="email-row">
    <input type="email" id="email-input" placeholder="Enter your email" style="display: block;">
    <button id="submit-btn" class="wpst-submit-button" style="display: block;">Submit</button>
  </div>
  <!-- MESSAGES -->
  <div class="messages-container">
    <div id="error-message" class="wpst-error-message" style="display: none;">Please enter a valid email.</div>
    <div id="win-message" class="wpst-win-message" style="display: none;">Congratulations, you win!</div>
    <div id="try-again-message" class="wpst-try-again-message" style="display: none;">Try again!</div>
    <div id="copied-message" class="wpst-copied-message" style="display: none;">Copied!</div>
  </div>
  <!-- COUPON BELOW EVERYTHING -->
  <button id="coupon-btn" class="wpst-coupon-button" onclick="copyCoupon()">SAVE20</button>
</div>
<script>
  const emailInput = document.getElementById('email-input');
  const submitBtn = document.getElementById('submit-btn');
  const spinBtn = document.getElementById('spin-btn');
  const closeBtn = document.getElementById('close-btn');
  const winMessage = document.getElementById('win-message');
  const tryAgainMessage = document.getElementById('try-again-message');
  const couponBtn = document.getElementById('coupon-btn');
  const copiedMessage = document.getElementById('copied-message');
  const errorMessage = document.getElementById('error-message');
  const emailRow = document.getElementById('email-row');
  const slots = [
    document.getElementById('slot-1'),
    document.getElementById('slot-2'),
    document.getElementById('slot-3')
  ];
  const slotImages = [
    'https://i.postimg.cc/x8fh0yN3/seven.png',
    'https://i.postimg.cc/fyzpwjSv/clover.png',
    'https://i.postimg.cc/BbSkqcPx/cherry.png'
  ];
  let attempts = 0;

  // Init state
  emailInput.style.display = 'block';
  submitBtn.style.display = 'block';
  spinBtn.style.display = 'none';
  couponBtn.style.display = 'none';

  function handleSubmit() {
    const email = emailInput.value;
    if (validateEmail(email)) {
      emailInput.style.display = 'none';
      submitBtn.style.display = 'none';
      spinBtn.style.display = 'flex';
      spinBtn.classList.add('small-text');
      spinBtn.querySelector('span').style.fontSize = '0.6rem';
      errorMessage.style.display = 'none';
    } else {
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
      }, 2000);
    }
  }

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }

  function spinSlots() {
  // Randomize and update slot images
  const results = [];
  slots.forEach((slot, i) => {
    const img = slotImages[Math.floor(Math.random() * slotImages.length)];
    slot.src = img;
    results.push(img);
    slot.classList.add('shake-vertical');
    setTimeout(() => {
      slot.classList.remove('shake-vertical');
    }, 1000);
  });

  // Win: 3 in a row
  const isWinningSpin = results[0] === results[1] && results[1] === results[2];

  if (isWinningSpin) {
    winMessage.style.display = 'block';
    couponBtn.style.display = 'block';
    spinBtn.style.display = 'none';
    slots.forEach(slot => {
      slot.classList.add('flash');
      setTimeout(() => { slot.classList.remove('flash'); }, 500);
    });
  } else {
    tryAgainMessage.style.display = 'block';
    setTimeout(() => {
      tryAgainMessage.style.display = 'none';
    }, 1000);
  }

  setTimeout(() => {
    winMessage.style.display = 'none';
  }, 8000);
}

  function copyCoupon() {
    navigator.clipboard.writeText('SAVE20');
    copiedMessage.style.display = 'block';
    setTimeout(() => {
      copiedMessage.style.display = 'none';
    }, 2000);
  }

  function closePopup() {
    document.getElementById('wps-container').style.display = 'none';
  }

  submitBtn.addEventListener('click', handleSubmit);
  spinBtn.addEventListener('click', spinSlots);
  closeBtn.addEventListener('click', closePopup);
</script>
</body>
</html>

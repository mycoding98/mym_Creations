<body>
  <div class="showcase-title">What time is it?</div>
  <div class="showcase-p">Dialog Clock &nbsp;|&nbsp; JavaScript, HTML, CSS</div>
  <div class="clock">
    <img src="https://i.postimg.cc/y6vC2Fhk/clock.png" class="clock-face" alt="Clock face">

    <!-- hands -->
    <img id="hourHand"   src="https://i.postimg.cc/h4pRN98z/hourhand.png"   class="hand hand-hour" alt="Hour hand">
    <img id="minuteHand" src="https://i.postimg.cc/05c1hpGK/newminute.png"  class="hand hand-minute" alt="Minute hand">
    <img id="secondHand" src="https://i.postimg.cc/xjtVBKGb/secondhand.png" class="hand hand-second" alt="Second hand">

    <div class="center-pin"></div>
  </div>

<script>
  // grab hand elements
  const hourHand   = document.getElementById("hourHand");
  const minuteHand = document.getElementById("minuteHand");
  const secondHand = document.getElementById("secondHand");

  // rotate helper
  function rotate(el, deg) {
    el.style.transform = `translate(-50%,-100%) rotate(${deg}deg)`;
  }

  // main updater
  function updateClock() {
    const now = new Date();
    const sec = now.getSeconds();
    const min = now.getMinutes();
    const hr  = now.getHours() % 12;

    // calculate angles
    const secDeg = sec * 6;
    const minDeg = min * 6 + sec * 0.1; // smooth minute
    const hrDeg  = hr * 30 + min * 0.5; // smooth hour

    // apply rotations
    rotate(secondHand, secDeg);
    rotate(minuteHand, minDeg);
    rotate(hourHand, hrDeg);
  }

  // init + tick
  updateClock();
  setInterval(updateClock, 1000);

  // note: could use requestAnimationFrame for smoother sweep seconds
</script>
</body>

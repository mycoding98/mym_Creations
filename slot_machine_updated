<div id="wps-container">
  <div class="wpst-slot-machine">
    <div class="wpst-title">Spin & Win</div>
    <div class="wpst-slot-display">
      <div class="wpst-slot"><img id="slot-1" src="https://demo.emarsys.net/custloads/210574935/md_100087248.png" alt="symbol"></div>
      <div class="wpst-slot"><img id="slot-2" src="https://demo.emarsys.net/custloads/210574935/md_100087252.png" alt="symbol"></div>
      <div class="wpst-slot"><img id="slot-3" src="https://demo.emarsys.net/custloads/210574935/md_100087253.png" alt="symbol"></div>
    </div>
    <input type="email" id="email-input" placeholder="Enter your email">
    <button id="submit-btn" class="wpst-submit-button">Submit</button>

    <button id="spin-btn" class="wpst-spin-button">Spin</button>
  
    <button id="coupon-btn" class="wpst-coupon-button" onclick="copyCoupon()">SAVE20</button>
   
    <button id="close-btn" class="wpst-close-button" onclick="closePopup()">X</button>
  </div>

  <!-- Messages Container placed below the slot machine -->
  <div class="messages-container">
    <div id="error-message" class="wpst-error-message">Please enter a valid email.</div>
    <div id="win-message" class="wpst-win-message">Congratulations, you win!</div>
    <div id="try-again-message" class="wpst-try-again-message">Try again!</div>
    <div id="copied-message" class="wpst-copied-message">Copied!</div>
  </div>
</div>

<script>
  const emailInput = document.getElementById('email-input');
  const submitBtn = document.getElementById('submit-btn');
  const spinBtn = document.getElementById('spin-btn');
 const closeBtn = document.getElementById('close-btn');	
  const winMessage = document.getElementById('win-message');
  const tryAgainMessage = document.getElementById('try-again-message');
  const couponBtn = document.getElementById('coupon-btn');
  const copiedMessage = document.getElementById('copied-message');
  const errorMessage = document.getElementById('error-message');

  const slots = [
    document.getElementById('slot-1'),
    document.getElementById('slot-2'),
    document.getElementById('slot-3')
  ];
  const slotImages = [
    'https://demo.emarsys.net/custloads/210574935/md_100087248.png',
    'https://demo.emarsys.net/custloads/210574935/md_100087252.png',
    'https://demo.emarsys.net/custloads/210574935/md_100087253.png'
  ];
  let attempts = 0;

   function handleSubmit() {
    const email = emailInput.value;
    if (validateEmail(email)) {
      emailInput.style.display = 'none';
      submitBtn.style.display = 'none';
      spinBtn.style.display = 'block';
      errorMessage.style.display = 'none';
	  document.querySelector('.wpst-slot-display').style.margin = '5rem 1px 0 5px'; // After submit	
    } else {
      errorMessage.style.display = 'block';
      setTimeout(() => {
        errorMessage.style.display = 'none';
      }, 2000);
    }
  }
	

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }

  function spinSlots() {
    attempts++;
    const isWinningSpin = attempts === 3; // Win on third click
    slots.forEach((slot, i) => {
      const img = isWinningSpin ? slotImages[0] : slotImages[Math.floor(Math.random() * slotImages.length)];
      slot.src = img;
      if (isWinningSpin) {
        slot.classList.add('flash');
        setTimeout(() => {
          slot.classList.remove('flash');
        }, 500);
      }
      slot.classList.add('shake-vertical');
      setTimeout(() => {
        slot.classList.remove('shake-vertical');
      }, 1000);
    });

    if (isWinningSpin) {
      winMessage.style.display = 'block';
      couponBtn.style.display = 'block';
      spinBtn.style.display = 'none';
      document.querySelector('.wpst-slot-display').style.margin = '5rem 1px 0 5px'; // After win
    } else {
      tryAgainMessage.style.display = 'block';
      setTimeout(() => {
        tryAgainMessage.style.display = 'none';
      }, 1000);
    }

    // Hide win message after a few seconds
    setTimeout(() => {
      winMessage.style.display = 'none';
    }, 8000);
  }

  function copyCoupon() {
    navigator.clipboard.writeText('SAVE20');
    copiedMessage.style.display = 'block';
    setTimeout(() => {
      copiedMessage.style.display = 'none';
    }, 2000);
  }

  submitBtn.addEventListener('click', handleSubmit);
  spinBtn.addEventListener('click', spinSlots);
  closeBtn.addEventListener('click', () => {
    document.getElementById('wps-container').style.display = 'none';
    
  });
</script>
